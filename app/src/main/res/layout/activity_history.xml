<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/driver_admin"
           android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/balanceId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Have to Send Admin: 1000k"
                android:drawableLeft="@drawable/send_money"
                android:padding="3dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/alreadyPayId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:text="AlreadySend: 1000k"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/payment_40"

                />
            <TextView
                android:id="@+id/avBalanceId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:text="Earned: 1000k"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/budget_40"

                />

        </LinearLayout>
        <Button
            android:id="@+id/pay_to_Admin"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:backgroundTint="#6944D4"
            android:text="Pay to Admin"
            android:textColor="@color/white"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ride History"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textColor="#6944D4"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="160dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#6944D4"
            />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/historyRecycler"
                android:scrollbars="vertical"
                />
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>